@{
    ViewBag.Title = "Choose";
    Layout = "~/Views/Shared/Checkout/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-4">

            @*Ajax actions are used to dynamically load content into the ticket picking list.*@
            @Ajax.ActionLink("Historic Tours", "PartialWalking", "Checkout", new AjaxOptions { UpdateTargetId = "ticket-choose-content" }, new { @class = "btn btn-lg" })
            @Ajax.ActionLink("Dining in Haarlem", "PartialDining", "Checkout", new AjaxOptions { UpdateTargetId = "ticket-choose-content" }, new { @class = "btn btn-lg" })
            @Ajax.ActionLink("Jazz @ Patronaat", "PartialJazz", "Checkout", new AjaxOptions { UpdateTargetId = "ticket-choose-content" }, new { @class = "btn btn-lg" })
            @Ajax.ActionLink("Talking Haarlem", "PartialTalking", "Checkout", new AjaxOptions { UpdateTargetId = "ticket-choose-content" }, new { @class = "btn btn-lg" })
        </div>

        <div id="ticket-choose-content" class="col-md-4">
            <!-- Press a button first. -->
        </div>

        <div id="shoppingcart" class="col-md-4">
            
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('btn.order').click(function () {
            var element = '<div class="col-12"><div class="row">' + $('#activity').val() + ' - ' + $('#amount').val() + '</div></div>';
            $('#shoppingcart').add();
        });
    });
</script>