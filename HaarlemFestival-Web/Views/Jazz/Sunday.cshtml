@model List<HaarlemFestival_Web.Models.Jazz>

@{
    ViewBag.Title = "Sunday - Information";
    Layout = "~/Views/Shared/Pages/_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/Jazz.css" />

<header id="DayMakeMooi">
    <h1 id="DayTitel">
        Haarlem Festival
    </h1>
    <h2 id="DayOnderTitel">
        Enjoy Jazz at the patronaat & Grote Markt
    </h2>
    <img src="~/Content/Images/logo.png" alt="Haarlem Festival Logo" id="Daylogo" />
</header>


<a href="/Pages/Jazz">&larr; Go back</a>

<main>
    <section id="intro">
        Welcome to the timetable of Sunday. Here you'll find information about bands such as @Model.First().Artist and @Model.Last().Artist.
        <br />
        This day is free of charge.
    </section>

    @foreach (var item in Model)
    {
        <section class="ArtistWrapper">
            <h1 class="ArtistName">@item.Artist.ToString()</h1>
            <h2 class="ArtistPlaying">Playing from @item.StartTime.ToShortTimeString() untill @item.EndTime.ToShortTimeString() at  the @item.Hall</h2>
            <img src="@item.ImagePath" alt="@item.Artist.ToString()" class="ArtistImage" />
            <p class="ArtistDescription">
                @item.Description
            </p>
        </section>
    }

    <section id="BuyTickets">
        <a href="~/Views/Checkout/_Jazz.cshtml"></a>
    </section>
</main>
